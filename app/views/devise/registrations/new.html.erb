<div class="container py-5 my-5">
  <div class="row col-md-6 col-lg-5 col-xl-4 border border-2 rounded-lg bg-white my-5 mx-auto py-5">
		<div class="col-md-12 mx-auto">
			<div class="logo mb-3">
			  <div class="col-md-12 text-center">
				 <h2>Sign up</h2>
			  </div>
			</div>
			<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :name,"Name" %>
          <%= f.text_field :name, autofocus: true, placeholder: '令和道子',class: 'col mx-0 pl-1' %>
        </div>

        <div class="form-group">
          <%= f.label :email,"Email" %>
          <%= f.email_field :email, autocomplete: "email",placeholder: 'sample@example.com',class: 'col mx-0 pl-1' %>
        </div>

        <div class="form-group">
          <%= f.label :password,"Password" %>
          <% if @minimum_password_length %>
           (<%= @minimum_password_length %> 文字以上)
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",class: 'col mx-0 pl-1' %>
        </div>

        <div class="col-md-12 text-center mt-5">
         <%= f.submit "利用開始",class: 'btn btn-block mybtn btn-danger text-white tx-tfm rounded-pill' %>
        </div>
      <% end %>

      <div class="col-md-12 d-flex align-items-center text-black-50 mt-3 mb-2">
        <hr class="col-3"><div class="">または</div><hr class="col-3">
      </div>
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    </div>
	</div>
</div>