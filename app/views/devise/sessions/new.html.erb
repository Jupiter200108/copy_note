<div class="container py-5 my-5">
  <div class="row col-md-6 col-lg-5 col-xl-4 border border-2 rounded-lg bg-white my-5 mx-auto py-5">
		<div class="col-md-12 mx-auto">
			<div class="logo mb-3">
			  <div class="col-md-12 text-center">
				 <h2>Log in</h2>
			  </div>
			</div>
			<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <div class="form-group">
          <%= f.label :email,"Email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'sample@example.com',class: 'col mx-0 pl-1' %>
        </div>
        <div class="form-group">
          <%= f.label :password,"Password" %>
          <%= f.password_field :password, autocomplete: "current-password",class: 'col mx-0 pl-1' %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="col-md-12 text-center mt-5">
          <%= f.submit "Log in",class: 'btn btn-block mybtn btn-danger text-white tx-tfm rounded-pill' %>
        </div>
      <% end %>

      <div class="col-md-12 d-flex align-items-center justify-content-between text-black-50 mt-3 mb-2">
        <hr class="col-3"><div>または</div><hr class="col-3">
      </div>
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    </div>
	</div>
</div>