<div class="container h-100">
  <div class="col-9 h1 mx-auto text-white"><%= @folder.name %></div>
  <div class="row h-100 mx-auto">
    <div class="col-4 border-left px-0"></div>
    <div class="col-4 border-right border-left px-0">
      <% @folders.each do |folder| %>
        <%= link_to folder_path(folder.id), data: {"turbolinks" => false}, class: "folders_link" do %>
          <div class= "col text-white current_link_icon rounded"><i class="fa-regular fa-folder-closed mr-2"></i><%= folder.name %></div>
        <% end %>
      <% end %>
    </div>
    <div class="col-4 border-right px-0">
      <% @memos.each do |memo| %>
        <%= link_to memo_path(memo.id), data: {"turbolinks" => false} do %>
          <div class= "col text-white text-short"><i class="fa-regular fa-file mr-2"></i><%= memo.title %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
